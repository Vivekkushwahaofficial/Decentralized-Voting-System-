{
  "name": "decentralized-voting-system",
  "version": "1.0.0",
  "description": "A blockchain-based decentralized voting system built with Solidity and Hardhat",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:goerli": "hardhat run scripts/deploy.js --network goerli",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "setup": "hardhat run scripts/setup.js",
    "setup:localhost": "hardhat run scripts/setup.js --network localhost",
    "setup:sepolia": "hardhat run scripts/setup.js --network sepolia",
    "start-voting": "hardhat run scripts/start-voting.js",
    "start-voting:localhost": "hardhat run scripts/start-voting.js --network localhost",
    "start-voting:sepolia": "hardhat run scripts/start-voting.js --network sepolia",
    "end-voting": "hardhat run scripts/end-voting.js",
    "end-voting:localhost": "hardhat run scripts/end-voting.js --network localhost",
    "end-voting:sepolia": "hardhat run scripts/end-voting.js --network sepolia",
    "interact": "hardhat run scripts/interact.js",
    "interact:localhost": "hardhat run scripts/interact.js --network localhost",
    "interact:sepolia": "hardhat run scripts/interact.js --network sepolia",
    "results": "hardhat run scripts/get-results.js",
    "results:localhost": "hardhat run scripts/get-results.js --network localhost",
    "results:sepolia": "hardhat run scripts/get-results.js --network sepolia",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "coverage": "hardhat coverage",
    "gas-reporter": "hardhat test --reporter gas",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:goerli": "hardhat verify --network goerli",
    "flatten": "hardhat flatten contracts/VotingSystem.sol > flattened.sol",
    "console": "hardhat console",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "fund": "hardhat fund-link",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "analyze": "slither contracts/",
    "doc": "hardhat docgen"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "solidity",
    "voting",
    "decentralized",
    "smart-contracts",
    "democracy",
    "election",
    "dapp",
    "web3"
  ],
  "author": "Decentralized Voting Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/DecentralizedVotingSystem.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/DecentralizedVotingSystem/issues"
  },
  "homepage": "https://github.com/your-username/DecentralizedVotingSystem#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.3.7",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-docgen": "^1.3.0",
    "solhint": "^4.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "config": {
    "solidity": {
      "version": "0.8.19"
    }
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-username"
  }
}
